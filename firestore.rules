rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get user data (only call if document exists)
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to get target user data (only call if document exists)
    function getTargetUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Helper function to check if user is in the same family
    function isSameFamily(userId) {
      return request.auth != null && (
        request.auth.uid == userId || // Allow access to own data
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          exists(/databases/$(database)/documents/users/$(userId)) &&
          getUserData().familyId != null &&
          getTargetUserData(userId).familyId != null &&
          getUserData().familyId == getTargetUserData(userId).familyId
        )
      );
    }

    // Helper function to check if user is a family admin
    function isFamilyAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow family members to read each other's basic data
      allow read: if isSameFamily(userId);
      
      // Allow user creation during registration
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to query and list users (simplified for debugging)
      allow list, read: if request.auth != null;
      
      // Subcollections under user document
      match /medications/{medicationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /symptoms/{symptomId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /family/{familyMemberId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /alerts/{alertId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /chatSessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Symptoms collection (simplified for debugging)
    match /symptoms/{symptomId} {
      // Allow all authenticated users to read and write symptoms
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Medications collection (simplified for debugging)
    match /medications/{medicationId} {
      // Allow all authenticated users to read and write medications
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Moods collection
    match /moods/{moodId} {
      // Allow users to create their own moods OR admins to create moods for family members
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid ||
        (isFamilyAdmin() && isSameFamily(request.resource.data.userId))
      );
      
      // Allow users to read and write their own moods
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's moods (for viewing family data)
      allow read: if request.auth != null && isSameFamily(resource.data.userId);
      
      // Allow admins to update/delete moods for family members
      allow update, delete: if request.auth != null && 
        isFamilyAdmin() && 
        isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query/list moods (queries are filtered by userId in the app)
      // Individual document access is still controlled by the read rules above
      allow list: if request.auth != null;
    }

    // Medical History collection
    match /medicalHistory/{historyId} {
      // Allow users to read and write their own medical history
      allow read, write: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid
      );
      
      // Allow users to create their own medical history
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's medical history (for viewing family data)
      allow read: if isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query and list medical history (simplified for debugging)
      allow list, read: if request.auth != null;
    }

    // Allergies collection
    match /allergies/{allergyId} {
      // Allow users to create their own allergies
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow users to read and write their own allergies
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid
      );
      
      // Allow family members to read each other's allergies (for viewing family data)
      allow read: if request.auth != null && isSameFamily(resource.data.userId);
      
      // Allow admins to update/delete allergies for family members
      allow update, delete: if request.auth != null && 
        isFamilyAdmin() && 
        isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query and list allergies (simplified for debugging)
      // This must come after the specific read rules to allow queries to work properly
      // Individual document access is still controlled by the read rules above
      allow list, read: if request.auth != null;
    }

    // Vitals collection (heart rate, blood pressure, etc.)
    match /vitals/{vitalId} {
      // Allow users to create their own vitals (primary rule - no document reads required)
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow admins to create vitals for family members (secondary rule - requires user document)
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        isFamilyAdmin() && 
        isSameFamily(request.resource.data.userId);
      
      // Allow users to read and write their own vitals
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's vitals (for viewing family data)
      allow read: if request.auth != null && isSameFamily(resource.data.userId);
      
      // Allow admins to update/delete vitals for family members
      allow update, delete: if request.auth != null && 
        isFamilyAdmin() && 
        isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query/list vitals (queries are filtered by userId in the app)
      // Individual document access is still controlled by the read rules above
      allow list: if request.auth != null;
    }

    // Lab Results collection
    match /labResults/{labResultId} {
      // Allow users to create their own lab results (primary rule - no document reads required)
      allow create: if request.auth != null && 
        request.resource.data.userId != null &&
        request.resource.data.userId == request.auth.uid;
      
      // Allow admins to create lab results for family members (secondary rule - requires user document)
      // Only evaluate if userId doesn't match auth.uid (to avoid unnecessary document reads)
      allow create: if request.auth != null && 
        request.resource.data.userId != null &&
        request.resource.data.userId != request.auth.uid &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        exists(/databases/$(database)/documents/users/$(request.resource.data.userId)) &&
        isFamilyAdmin() && 
        isSameFamily(request.resource.data.userId);
      
      // Allow users to read and write their own lab results
      allow read, update, delete: if request.auth != null && 
        resource.data.userId != null &&
        resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's lab results (for viewing family data)
      allow read: if request.auth != null && 
        resource.data.userId != null &&
        resource.data.userId != request.auth.uid &&
        isSameFamily(resource.data.userId);
      
      // Allow admins to update/delete lab results for family members
      allow update, delete: if request.auth != null && 
        resource.data.userId != null &&
        resource.data.userId != request.auth.uid &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        exists(/databases/$(database)/documents/users/$(resource.data.userId)) &&
        isFamilyAdmin() && 
        isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query/list lab results (queries are filtered by userId in the app)
      // Individual document access is still controlled by the read rules above
      allow list: if request.auth != null;
    }

    // Family invitation codes
    match /familyInvitations/{invitationId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.invitedBy;
      allow read: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.invitedBy || 
         resource.data.status == 'pending');
    }

    // Alerts collection - More permissive for family features
    match /alerts/{alertId} {
      // Allow authenticated users to read, create, and update alerts
      // Family relationship validation is handled in the application layer
      allow read, create, update: if request.auth != null;
      
      // Allow users to delete only their own alerts
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Families collection (simplified for debugging)
    match /families/{familyId} {
      // Allow authenticated users to read and write family documents
      allow read, write: if request.auth != null;
      
      // Allow family creation by authenticated users
      allow create: if request.auth != null;
    }

    // Biometric profiles - user can only read/write their own
    match /biometric_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Auth logs - user can only read/write their own logs
    // Allow unauthenticated writes during biometric login (before user is authenticated)
    // but validate that the userId exists in the users collection
    match /auth_logs/{logId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow authenticated users to write their own logs
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow unauthenticated writes during biometric login (validate userId exists and timestamp is valid)
      allow create: if request.auth == null && 
        request.resource.data.userId != null &&
        exists(/databases/$(database)/documents/users/$(request.resource.data.userId)) &&
        // Validate timestamp exists, is a timestamp type, and is not in the future
        request.resource.data.timestamp != null &&
        request.resource.data.timestamp is timestamp &&
        request.resource.data.timestamp <= request.time &&
        // Ensure timestamp is recent (after 2024-01-01 to prevent very old logs)
        request.resource.data.timestamp > timestamp.date(2024, 1, 1);
      // Note: Actual rate limiting (e.g., max 1 log per 5 minutes) should be implemented
      // in Cloud Functions or application code, as Firestore rules don't support duration arithmetic
    }
  }
} 