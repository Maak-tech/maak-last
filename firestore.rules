rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to get target user data
    function getTargetUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Helper function to check if user is in the same family
    function isSameFamily(userId) {
      return request.auth != null && 
        request.auth.uid == userId || // Allow access to own data
        (
          exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
          exists(/databases/$(database)/documents/users/$(userId)) &&
          getUserData().familyId != null &&
          getTargetUserData(userId).familyId != null &&
          getUserData().familyId == getTargetUserData(userId).familyId
        );
    }

    // Helper function to check if user is a family admin
    function isFamilyAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow family members to read each other's basic data
      allow read: if isSameFamily(userId);
      
      // Allow user creation during registration
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to query and list users (simplified for debugging)
      allow list, read: if request.auth != null;
      
      // Subcollections under user document
      match /medications/{medicationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /symptoms/{symptomId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /family/{familyMemberId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /alerts/{alertId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /chatSessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Symptoms collection (simplified for debugging)
    match /symptoms/{symptomId} {
      // Allow all authenticated users to read and write symptoms
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Medications collection (simplified for debugging)
    match /medications/{medicationId} {
      // Allow all authenticated users to read and write medications
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Moods collection
    match /moods/{moodId} {
      // Allow users to create their own moods OR admins to create moods for family members
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid ||
        (isFamilyAdmin() && isSameFamily(request.resource.data.userId))
      );
      
      // Allow users to read and write their own moods
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's moods (for viewing family data)
      allow read: if request.auth != null && isSameFamily(resource.data.userId);
      
      // Allow admins to update/delete moods for family members
      allow update, delete: if request.auth != null && 
        isFamilyAdmin() && 
        isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query/list moods (queries are filtered by userId in the app)
      // Individual document access is still controlled by the read rules above
      allow list: if request.auth != null;
    }

    // Medical History collection
    match /medicalHistory/{historyId} {
      // Allow users to read and write their own medical history
      allow read, write: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid
      );
      
      // Allow users to create their own medical history
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's medical history (for viewing family data)
      allow read: if isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query and list medical history (simplified for debugging)
      allow list, read: if request.auth != null;
    }

    // Family invitation codes
    match /familyInvitations/{invitationId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.invitedBy;
      allow read: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.invitedBy || 
         resource.data.status == 'pending');
    }

    // Alerts collection - More permissive for family features
    match /alerts/{alertId} {
      // Allow authenticated users to read, create, and update alerts
      // Family relationship validation is handled in the application layer
      allow read, create, update: if request.auth != null;
      
      // Allow users to delete only their own alerts
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Families collection (simplified for debugging)
    match /families/{familyId} {
      // Allow authenticated users to read and write family documents
      allow read, write: if request.auth != null;
      
      // Allow family creation by authenticated users
      allow create: if request.auth != null;
    }
  }
} 