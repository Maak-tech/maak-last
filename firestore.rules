rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is in the same family (simplified)
    function isSameFamily(userId) {
      return request.auth != null &&
        request.auth.uid == userId; // Temporarily simplified for debugging
    }

    // Helper function to check if user is a family admin (simplified)
    function isFamilyAdmin() {
      return request.auth != null; // Temporarily simplified for debugging
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow family members to read each other's basic data
      allow read: if isSameFamily(userId);
      
      // Allow user creation during registration
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to query and list users (simplified for debugging)
      allow list, read: if request.auth != null;
    }

    // Symptoms collection (simplified for debugging)
    match /symptoms/{symptomId} {
      // Allow all authenticated users to read and write symptoms
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Medications collection (simplified for debugging)
    match /medications/{medicationId} {
      // Allow all authenticated users to read and write medications
      allow read, write, create, update, delete: if request.auth != null;
    }

    // Medical History collection
    match /medicalHistory/{historyId} {
      // Allow users to read and write their own medical history
      allow read, write: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid
      );
      
      // Allow users to create their own medical history
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow family members to read each other's medical history (for viewing family data)
      allow read: if isSameFamily(resource.data.userId);
      
      // Allow authenticated users to query and list medical history (simplified for debugging)
      allow list, read: if request.auth != null;
    }

    // Family invitation codes
    match /familyInvitations/{invitationId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.invitedBy;
      allow read: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.invitedBy || 
         resource.data.status == 'pending');
    }

    // Alerts collection
    match /alerts/{alertId} {
      // Allow users to manage their own alerts
      allow read, write: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid
      );
      
      // Allow family admins to manage alerts for family members
      allow read, write: if isFamilyAdmin() && isSameFamily(resource.data.userId);
      allow create: if isFamilyAdmin() && isSameFamily(request.resource.data.userId);
      
      // Allow family members to read each other's alerts (for viewing family data)
      allow read: if isSameFamily(resource.data.userId);
    }

    // Families collection (simplified for debugging)
    match /families/{familyId} {
      // Allow authenticated users to read and write family documents
      allow read, write: if request.auth != null;
      
      // Allow family creation by authenticated users
      allow create: if request.auth != null;
    }
  }
} 