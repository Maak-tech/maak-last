{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "cd \"$RESOURCE_DIR\" && bun run build"
      ],
      "runtime": "nodejs22"
    }
  ],
  "hosting": {
    "site": "maak-5caad",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/dexcom-callback",
        "destination": "/dexcom-callback.html"
      }
    ]
  }
}
